# Path to your Oh My Zsh installation.
export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="robbyrussell"

plugins=(git)

source $ZSH/oh-my-zsh.sh

{{ if env "BUNDLE_RUBYGEMS__PKG__GITHUB__COM" -}}
export BUNDLE_RUBYGEMS__PKG__GITHUB__COM={{ env "BUNDLE_RUBYGEMS__PKG__GITHUB__COM" }}
{{ end -}}

export PATH="$HOME/.rbenv/bin:$PATH"
if command -v rbenv &> /dev/null; then
  eval "$(rbenv init - zsh)"
fi

export ANDROID_HOME=$HOME/Library/Android/sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/platform-tools
if [ -f "$HOME/.local/bin/env" ]; then
  . "$HOME/.local/bin/env"
fi
export PATH=$PATH:$HOME/.maestro/bin
export PATH="/opt/homebrew/bin:/usr/local/bin:$PATH"

[ -f ~/.glrc ] && source ~/.glrc
{{ if env "NPM_TOKEN" -}}
export NPM_TOKEN={{ env "NPM_TOKEN" }}
{{ end -}}
export PATH=$PATH:$HOME/.maestro/bin
if [ -f ~/.gusto/init.sh ]; then
  source ~/.gusto/init.sh
fi

eval "$(/opt/homebrew/bin/brew shellenv)"
if [ -f "/opt/homebrew/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc" ]; then
  source "/opt/homebrew/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc"
fi

export PATH="$HOME/.flashlight/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"
